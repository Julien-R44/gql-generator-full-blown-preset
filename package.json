{
  "name": "@julr/gql-generator-full-blown-preset",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@7.0.1",
  "description": "ðŸ›© A cool and opinionated base configuration for graphql-code-generator.",
  "keywords": [
    "graphql",
    "graphql-code-generator"
  ],
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://github.com/Julien-R44/gql-generator-full-blown-preset#readme",
  "bugs": {
    "url": "https://github.com/Julien-R44/gql-generator-full-blown-preset/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "Julien Ripouteau <julien@ripouteau.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Julien-R44/gql-generator-full-blown-preset.git"
  },
  "funding": "https://github.com/sponsors/Julien-R44",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "start": "node --loader=ts-node/esm src/index.ts",
    "test": "node --loader=ts-node/esm bin/test.ts",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@graphql-typed-document-node/core": "^3.0.0"
  },
  "dependencies": {
    "graphql-config": "^4.3.1",
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.7.0",
    "@graphql-codegen/near-operation-file-preset": "^2.2.15",
    "@graphql-codegen/schema-ast": "^2.4.1",
    "@graphql-codegen/typed-document-node": "^2.2.14",
    "@graphql-codegen/typescript": "^2.6.0",
    "@graphql-codegen/typescript-operations": "^2.4.3"
  },
  "devDependencies": {
    "@antfu/ni": "^0.16.2",
    "@japa/assert": "^1.3.4",
    "@japa/runner": "^2.0.8",
    "@japa/spec-reporter": "^1.1.12",
    "@julr/eslint-config": "^0.3.0",
    "@types/node": "^17.0.34",
    "bumpp": "^7.1.1",
    "eslint": "^8.15.0",
    "pnpm": "^7.1.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "unbuild": "^0.7.4"
  },
  "eslintConfig": {
    "extends": "@julr",
    "rules": {
      "n/no-unsupported-features/es-syntax": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "openapi-types"
      ]
    }
  }
}
